<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

     <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择新闻组别" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView" >

        <RadioGroup
        android:id="@+id/typegroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
            <RadioButton
                android:id="@+id/radioButtonToutiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新闻头条" />

            <RadioButton
                android:id="@+id/radioButtonQiche"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="汽车新闻" />

            <RadioButton
                android:id="@+id/radioButtonYule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="娱乐新闻" />

            <RadioButton
                android:id="@+id/radioButtonTiyu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="体育新闻" />

            <RadioButton
                android:id="@+id/radioButtonCaijing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="财经新闻" />

            <RadioButton
                android:id="@+id/radioButtonKeji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="科技新闻" />

            <RadioButton
                android:id="@+id/radioButtonGaoxiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搞笑新闻" />

            <RadioButton
                android:id="@+id/radioButtonJingxuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="精选新闻" />

            <RadioButton
                android:id="@+id/radioButtonQiqu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="奇趣新闻" />

            <RadioButton
                android:id="@+id/radioButtonMingxing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="明星新闻" />

            <RadioButton
                android:id="@+id/radioButtonJingji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="竞技新闻" />

            <RadioButton
                android:id="@+id/radioButtonShipin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="视频新闻" />

            <RadioButton
                android:id="@+id/radioButtonZhenjing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="震惊新闻" />

            <RadioButton
                android:id="@+id/radioButtonNuanxin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暖心新闻" />

            <RadioButton
                android:id="@+id/radioButtonBagua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="八卦新闻" />

        </RadioGroup>
    </ScrollView>

</LinearLayout>
